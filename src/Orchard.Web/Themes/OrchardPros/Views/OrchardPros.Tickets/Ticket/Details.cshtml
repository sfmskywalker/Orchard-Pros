@{
    var ticketDetails = New.Ticket_Details(Ticket: Model.Ticket, User: Model.User);
    var ticketAside = New.Ticket_Aside(Ticket: Model.Ticket, User: Model.User, LastModifier: Model.LastModifier, Categories: Model.Categories, Tags: Model.Tags);
    var ticketReplies = New.Ticket_Replies(ticketAside: Model.Ticket);

    Layout.Title = @T("Ticket");
    Layout.Content.Add(ticketDetails);
    Layout.AsideSecond.Add(ticketAside);
    Layout.AfterContent.Add(ticketReplies);
}