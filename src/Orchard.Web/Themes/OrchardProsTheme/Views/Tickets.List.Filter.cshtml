    <div class="block tagcloud">
        <h3>@T("Popular tags")</h3>
        @foreach (var tag in tags) {
            <a @if(tag.Id == tagId){<text>class="active"</text>} href="@Url.Action("Index", "Ticket", new { area = "OrchardPros", criteria, page, pageSize, tagId = tag.Id })">
                <span class="label label-default">@tag.Name</span>
            </a>
        }
    </div> <!-- /.tagcloud -->
</aside>