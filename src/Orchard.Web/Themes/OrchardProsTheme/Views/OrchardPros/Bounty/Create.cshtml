@model OrchardPros.ViewModels.BountyViewModel
@{
    Layout.Title = @T("Start a Bounty");
}
<section class="half-size center-block">
    @using (Html.BeginFormAntiForgeryPost()) {
        @Html.ValidationSummary()
        @Html.EditorForModel()
        <fieldset>
            <button type="submit" class="btn btn-success btn-submit">@T("Next")</button>
            @Html.ItemDisplayLink(T("Cancel").ToString(), Model.Ticket, new { @class = "button" })
        </fieldset>
    }
</section>