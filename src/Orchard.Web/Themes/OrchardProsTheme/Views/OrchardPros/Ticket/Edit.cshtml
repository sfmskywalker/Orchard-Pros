@model OrchardPros.ViewModels.TicketViewModel
@{
    Layout.Title = @T("Edit Ticket");
}
<section class="half-size center-block">
    @using (Html.BeginFormAntiForgeryPost()) {
        @Html.ValidationSummary()
        @Html.EditorForModel()
        <fieldset>
            <button type="submit" class="btn btn-success btn-edit">@T("Save Ticket")</button>
            @Html.ItemDisplayLink(T("Cancel").Text, Model.Ticket, new {@class = "btn btn-default"})
        </fieldset>
    }
</section>