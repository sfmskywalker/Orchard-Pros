@model OrchardPros.ViewModels.TicketViewModel
@{
    Layout.Title = @T("Create a Ticket");
    var returnUrl = !String.IsNullOrWhiteSpace(Request.UrlReferrer.AbsoluteUri) ? Request.UrlReferrer.AbsoluteUri : Url.Content("~/");
}
<section class="half-size center-block">
    @using (Html.BeginFormAntiForgeryPost()) {
        @Html.ValidationSummary()
        @Html.EditorForModel()
        <fieldset>
            <button type="submit" class="btn btn-create-ticket">@T("Create Ticket")</button>
            <a href="@returnUrl" class="btn btn-default">@T("Cancel")</a>
        </fieldset>
    }
</section>