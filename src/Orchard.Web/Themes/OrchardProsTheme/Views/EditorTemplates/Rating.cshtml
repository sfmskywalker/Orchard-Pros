@{
    Style.Include("jquery.rating.css");
    Script.Require("jQuery");
    Script.Include("jquery.rating.js", "jquery.rating.min.js");
}
@{
    var currentValue = (ViewData.TemplateInfo.FormattedModelValue as int?);
}
@for (var i = 1; i <= 10; i++) {
    <input type="radio" name="Rating" value="@(i)" class="star" data-rating='{"split":2}' @if(i <= currentValue){<text>checked="checked"</text>} />
}