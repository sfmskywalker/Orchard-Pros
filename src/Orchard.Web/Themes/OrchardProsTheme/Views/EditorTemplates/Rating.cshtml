@{
    var ratings = Enumerable.Range(1, 10);
    var currentValue = (ViewData.TemplateInfo.FormattedModelValue as int?);
    var options = ratings.Select(x => new SelectListItem {Text = x.ToString(), Value = x.ToString(), Selected = x == currentValue});
}
@Html.DropDownList("", options, new { @class = "form-control" })