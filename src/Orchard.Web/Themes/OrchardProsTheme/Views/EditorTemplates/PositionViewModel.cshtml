@model OrchardPros.ViewModels.PositionViewModel
<fieldset>
    <div class="form-group">
        @Html.LabelFor(m => m.CompanyName, T("Company Name").ToString(), new { @class = "col-sm-3" })
        <div class="col-sm-4">
            @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Title, T("Title").ToString(), new { @class = "col-sm-3" })
        <div class="col-sm-4">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Location, T("Location").ToString(), new { @class = "col-sm-3" })
        <div class="col-sm-4">
            @Html.TextBoxFor(m => m.Location, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.PeriodStartYear, T("Start Period").ToString(), new { @class = "col-sm-3" })
        <div class="col-sm-4">
            <div class="row">
                <div class="col-sm-6">
                    @Html.EditorFor(m => m.PeriodStartYear, new { Model.Years })
                </div>
                <div class="col-sm-6">
                    @Html.EditorFor(m => m.PeriodStartMonth, new { Model.Months })
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.PeriodEndYear, T("End Period").ToString(), new { @class = "col-sm-3" })
        <div class="col-sm-4">
            <div class="row">
                <div class="col-sm-6">
                    @Html.EditorFor(m => m.PeriodEndYear, new { Model.Years })        
                </div>
                <div class="col-sm-6">
                    @Html.EditorFor(m => m.PeriodEndMonth, new { Model.Months })
                </div>
            </div>
            <div>
                <label for="@Html.FieldIdFor(m => m.IsCurrentPosition)">
                    @Html.CheckBoxFor(m => m.IsCurrentPosition)
                    @T("This is my current position")
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description, T("Description"))
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 5 })
    </div>
</fieldset>