@using Orchard.Layouts.Elements
@{
    var element = (Row)Model.Element;
    var isTemplated = element.IsTemplated;
}
<div class="row x-row x-element x-container x-holder @if (isTemplated) {<text>templated</text>}" data-element="@Model.ElementJson">
    @if (!isTemplated) {
        <div class="toolbar row-toolbar sortable dynamic-toolbar">
            @if (element.Descriptor.EnableEditorDialog) {
                <a class="edit icon-cog" href="#" title="@T("Edit row properties")"></a>
            }
            @if (!element.Columns.Any()) {
                <a class="add-column icon-plus" href="#" title="@T("Add column")"></a>
            }
            <a class="remove icon-trash" href="#" title="@T("Remove row")"></a>
        </div>
    }
    @DisplayChildren(Model)
</div>