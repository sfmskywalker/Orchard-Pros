@model OrchardPros.Tickets.ViewModels.TicketViewModel
@{
    Layout.Title = @T("Edit Ticket");
}
@using (Html.BeginFormAntiForgeryPost()) {
    @Html.ValidationSummary()
    @Html.EditorForModel()
    <fieldset>
        <button type="submit">@T("Save Ticket")</button>
        @Html.ActionLink(T("Cancel").ToString(), "Edit", "Ticket", new { Model.Id, Area = "OrchardPros.Tickets" }, new { @class = "button" })
    </fieldset>
}