@model OrchardPros.Tickets.ViewModels.TicketViewModel
<fieldset>
    <div class="form-group">
        @Html.LabelFor(m => m.Title, T("Title"))
        @Html.TextBoxFor(m => m.Title, new { @class = "text large" })
        @Html.ValidationMessageFor(m => m.Title)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Type, T("Type"))
        @Html.EditorFor(m => m.Type)
        @Html.ValidationMessageFor(m => m.Type)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description, T("Description"))
        @Html.TextAreaFor(m => m.Description, new { @class = "text large" })
        @Html.ValidationMessageFor(m => m.Description)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Categories, T("Categories"))
        @Html.EditorFor(m => m.Categories, new { Terms = Model.CategoryTerms })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Tags, T("Tags"))
        @Html.TextBoxFor(m => m.Tags, new { @class = "text large" })
        @Html.ValidationMessageFor(m => m.Tags)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Bounty, T("Bounty"))
        @Html.TextBoxFor(m => m.Bounty, new { @class = "text small" })
        @Html.ValidationMessageFor(m => m.Bounty)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ExperiencePoints, T("EXP"))
        @Html.TextBoxFor(m => m.ExperiencePoints, new { @class = "text small" })
        @Html.ValidationMessageFor(m => m.ExperiencePoints)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CreatedUtc, T("Created"))
        @Html.TextBoxFor(m => m.CreatedUtc, new { @class = "text medium" })
        @Html.ValidationMessageFor(m => m.CreatedUtc)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DeadlineUtc, T("Deadline"))
        @Html.TextBoxFor(m => m.DeadlineUtc, new { @class = "text medium" })
        @Html.ValidationMessageFor(m => m.DeadlineUtc)
    </div>
</fieldset>