@model OrchardPros.ViewModels.TicketViewModel
<fieldset>
    <div class="form-group">
        @Html.LabelFor(m => m.Subject, T("Subject"))
        @Html.TextBoxFor(m => m.Subject, new { @class = "text large" })
        @Html.ValidationMessageFor(m => m.Subject)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Type, T("Type"))
        @Html.EditorFor(m => m.Type)
        @Html.ValidationMessageFor(m => m.Type)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Body, T("Body"))
        @Html.TextAreaFor(m => m.Body, new { @class = "text large" })
        @Html.ValidationMessageFor(m => m.Body)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Categories, T("Categories"))
        @Html.EditorFor(m => m.Categories, new { Terms = Model.CategoryTerms })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Tags, T("Tags"))
        @Html.EditorFor(m => m.Tags, new { TermsSourceUrl = Url.Action("SearchTags", "Ticket", new { Area = "OrchardPros" }) })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ExternalUrl, T("External URL"))
        @Html.TextBoxFor(m => m.ExternalUrl, new { @class = "text large" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ExperiencePoints, T("EXP"))
        @Html.TextBoxFor(m => m.ExperiencePoints, new { @class = "text small" })
        @Html.ValidationMessageFor(m => m.ExperiencePoints)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DeadlineUtc, T("Deadline"))
        @Html.TextBoxFor(m => m.DeadlineUtc, new { @class = "text medium" })
        @Html.ValidationMessageFor(m => m.DeadlineUtc)
    </div>
</fieldset>