@using OrchardPros.Membership.Helpers
@model OrchardPros.ViewModels.PositionViewModel
@{
    Layout.Title = @T("Edit Position");
}
@using (Html.BeginFormAntiForgeryPost()) {
    @Html.ValidationSummary()
    @Html.EditorForModel()
    <fieldset>
        <button class="primaryAction" type="submit" name="submit.Save" value="submit.Save">@T("Save")</button>
        @Html.Link(T("Cancel").ToString(), Url.Profile(Model.User.UserName))
    </fieldset>
}