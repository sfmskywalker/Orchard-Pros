@model OrchardPros.ViewModels.BountyViewModel
@{
    Layout.Title = @T("Start a Bounty");
}
@using (Html.BeginFormAntiForgeryPost()) {
    @Html.ValidationSummary()
    @Html.EditorForModel()
    <fieldset>
        <button type="submit">@T("Next")</button>
        @Html.ItemDisplayLink(T("Cancel").ToString(), Model.Ticket, new { @class = "button" })
    </fieldset>
}