@using OrchardPros.Careers.Helpers
@model OrchardPros.Careers.Models.ProfessionalProfilePart
@{
    Script.Require("ShapesBase");
}
<fieldset>
    <legend>@T("Experience")</legend>
    <table class="items">
        <thead>
            <tr>
                <th>@T("Id")</th>
                <th>@("Company")</th>
                <th>@("Title")</th>
                <th>@("Location")</th>
                <th>@("Start")</th>
                <th>@("End")</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var position in Model.Positions) {
                <tr>
                    <td>@position.Id</td>
                    <td>@position.CompanyName</td>
                    <td>@position.Title</td>
                    <td>@position.Location</td>
                    <td>@position.Start()</td>
                    <td>@position.End()</td>
                    <td>
                        @Html.ActionLink(T("Edit").ToString(), "Edit", "Position", new { position.Id, area = "OrchardPros.Careers" }, null) @T(" |")
                        @Html.ActionLink(T("Delete").ToString(), "Delete", "Position", new { position.Id, area = "OrchardPros.Careers" }, new { itemprop = "UnsafeUrl RemoveUrl" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @Html.ActionLink(T("Add Position").ToString(), "Create", "Position", new { Model.Id, area = "OrchardPros.Careers" }, new { @class = "button" })
</fieldset>

<fieldset>
    <legend>@T("Skills")</legend>
    <table class="items">
        <thead>
            <tr>
                <th>@T("Id")</th>
                <th>@("Name")</th>
                <th>@("Rating")</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var skill in Model.Skills) {
                <tr>
                    <td>@skill.Id</td>
                    <td>@skill.Name</td>
                    <td>@skill.Rating</td>
                    <td>
                        @Html.ActionLink(T("Edit").ToString(), "Edit", "Skill", new { skill.Id, area = "OrchardPros.Careers" }, null) @T(" |")
                        @Html.ActionLink(T("Delete").ToString(), "Delete", "Skill", new { skill.Id, area = "OrchardPros.Careers" }, new { itemprop = "UnsafeUrl RemoveUrl" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @Html.ActionLink(T("Add Skill").ToString(), "Create", "Skill", new { Model.Id, area = "OrchardPros.Careers" }, new { @class = "button" })
</fieldset>