@model OrchardPros.Careers.ViewModels.RecommendationViewModel
@{
    Layout.Title = @T("Create Recommendation");
}
@using (Html.BeginFormAntiForgeryPost()) {
    @Html.ValidationSummary()
    @Html.EditorForModel()
    <fieldset>
        <button class="primaryAction" type="submit" name="submit.Save" value="submit.Save">@T("Create")</button>
        @Html.ActionLink(T("Cancel").ToString(), "Edit", "Admin", new { Model.Profile.Id, Area = "Orchard.Users" }, new { @class = "button" })
    </fieldset>
}